@model {Model};

<div class="row">
	<div class="col-6">

		<form asp-action="@formAction">

			{InputFields}

			<div class="input-group sticky-bottom">
				<button type="submit" name="Command" value="Save" class="btn btn-outline-primary">Save</button>
				<a asp-controller="{Controller}" asp-action="{Action}"  class="btn btn-outline-secondary">Return to list</a>
			</div>
		</form>

	</div>
</div>

@section InfoItems{
	{InfoFields}
}
