@{
	var title = "OWS Raw Availability";
	ViewData["Title"] = title;
}
<div class="text-center">
	<h1 class="display-6">@title</h1>
	<p>Load raw availability (no filtering) direct from Opera.</p>
	<p><a asp-controller="Ows" asp-action="Index">Dashboard</a></p>
</div>

<div class="row">
    <div class="col-md-3 col-sm-6">
        <div class="form-group">
            <label class="">Hotel</label>
            <select id="hotelCode" class="form-control control-max-width">
                <option selected value="LWH">Low Wood</option>
                <option value="LHH">Lancaster</option>
                <option value="WBH">Wild Boar</option>
            </select>
        </div>
        <div class="form-group">
            <label>Arrive</label>
            <input id="dateArrive" type="date" class="form-control control-max-width" pattern="[0-9]{2}-[0-9]{2}-[0-9]{4}" />
        </div>
        <div class="form-group">
            <label class="">Nights</label>
            <input id="nights" type="number" value="1" class="form-control control-max-width" min="1" />
        </div>
        <div class="form-group">
            <label class="">Depart</label>
            <input id="dateDepart" type="date" class="form-control control-max-width" readonly pattern="[0-9]{2}-[0-9]{2}-[0-9]{4}" />
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="form-group">
            <label class="">Adults</label>
            <select id="adults" class="form-control control-max-width">
                <option value="1">1</option>
                <option selected value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label class="">Children</label>
            <select id="children" class="form-control control-max-width">
                <option selected value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

    </div>

    <div class="col-md-3  col-sm-6">
        <div id="form-group" class="form-group">
            <label id="label-qualifying-type" class="" for="qualifyingType">Qualifying Type</label>
            <select id="qualifyingType" class="form-control qual-x control-max-width-200">
                <option selected value="">PUBLIC RATES</option>
                <option value="TRAVEL_AGENT">TRAVEL_AGENT</option>
                <option value="TRAVEL_AGENT">PROMOTION</option>
                <option value="COMPANY">COMPANY</option>
                <option value="CORPORATE">CORPORATE</option>
            </select>

        </div>
        <div class="form-group">
            <label id="label-qualifying-code" class="" for="qualifyingCode">Qualifying Code</label>
            <input type="text" id="qualifyingCode" class="form-control qual-x control-max-width-200" value="" />
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
       
        <div class="form-group">
            <label id="label-sort" class="">Sort</label>
            <select id="sort" class="form-control control-max-width-250">
                <option selected value="roomtype">Room Type, Rate Plan</option>
                <option value="rateplan">Rate Plan, Room Type</option>
                <option value="price">Price, Room Type, Rate Plan</option>
            </select>
        </div>
        <div class="form-group">
            <label id="label-data-type" class="">Data to view</label>
            <select id="dataType" class="form-control control-max-width-250">
                <option selected value="RoomRates">Room Rates (Room Types+Plans)</option>
                <option value="RoomTypes">Room Types Only</option>
                <option value="RatePlans">Rate Plans Only</option>
            </select>
        </div>
       
    </div>
</div> <!-- row -->

<div class="row" style="border: 1px solid lightgray; padding: 3px;">
    <div class="col-md-4">
        <button class="btn btn-outline-primary" id="load-button">Load</button>
        <p>Click to load raw data.</p>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="" for="store-id">Enter a descriptive label</label>
            <input type="text" id="store-id" class="form-control" value="" />
            <p><em>You can save the current configuration</em></p>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary" id="save-button">Save</button>
        </div>

    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="">Select a saved configuration</label>
            <select id="store-select" class="form-control">
                <option></option>
            </select>
        </div>
    </div>

</div>

<div class="row">
	<div class="col-md-12" id="data">
	</div>
</div>

@section Scripts {
    <script src="~/js/mshapp/msh-apiservice.js"></script>
    <script src="~/js/mshapp/mshapp.js"></script>
    <script src="~/js/admin/ows/msh-admin-ows-raw-availability.js"></script>
}