@using Msh.WebApp.Models.Admin

@model Msh.Opera.Ows.Models.OwsConfig;
@{
	var title = "OWS Config Triggers";
	ViewData["Title"] = title;

	ViewBag.Success = new SuccessAlert
	{
		ModelName = "CriticalErrorTrigger",
		ReturnPath = "/admin/ows",
		ReturnPathName = "OWS Dashboard",
		KeyPropertyLabel = title,
		KeyPropertyName = "Code",
		KeyPropertyValue = "",
		FormAction = "OwsConfigEditTriggers"
	};
}

<div class="text-center">
	<h1 class="display-6">@title</h1>
	<p>Edit the main OWS Config Critical Error Triggers</p>
	<p>Enter error codes and the pattern that is used to catch them.</p>
</div>

<input type="hidden" id="api-method" value="OwsConfigEditTriggers" />

<div class="row">
	<div class="col-12" id="table-target">

	</div>
</div>

<div class="mt-3" style="display:flex;justify-content:start;">
	<div class="input-group">
		<button id="save-owsconfig-maps" class="btn btn-outline-primary" class="mr-3">Save</button>
		<a asp-contoller="Ows" asp-action="Index"  class="btn btn-outline-secondary">Return to dashboard</a>
	</div>

</div>


@section Scripts {
	<script src="~/js/mshapp/msh-apiservice.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/admin/ows/msh-admin-owsconfig-triggers.js"></script>
}