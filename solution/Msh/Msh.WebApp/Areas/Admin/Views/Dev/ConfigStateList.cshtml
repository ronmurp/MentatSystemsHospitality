@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Msh.Admin.Models.Const
@using Msh.WebApp.TagHelpers

@model List<Msh.Common.Models.Configuration.ConfigState>
@{
	var title = "ConfigStates";
	ViewData["Title"] = title;
}

@await Component.InvokeAsync("AdminMenu", new { menuName = AdminConst.MenuDev, currentItem = "ConfigStateList" })

<input type="hidden" id="edit-type" value="config-state-list" />

<div class="text-center">
	<h1 class="display-6">@title</h1>
	<p>For more information click <info-icon name="info-config-states" /></p>
</div>

<div class="row">
	<div class="col-12" id="table-target">
	</div>
</div>

<div class="mt-3" style="display:flex;justify-content:start;">
	<div class="input-group">
		<button id="save-config-state" class="btn btn-outline-primary" class="mr-3">Save</button>
		<a asp-contoller="Dev" asp-action="Index" class="btn btn-outline-secondary">Return to dashboard</a>
	</div>

</div>

@section InfoItems {
	<div data-info-for="info-config-states">
		<span>Config States</span>
		<div>
			<p>

			</p>
		</div>
	</div>
}


@section Scripts {
	<script src="~/js/mshapp/msh-apiservice.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/admin/msh-admin-palls.js"></script>
	<script src="~/js/admin/dev/msh-dev-config-states.js"></script>
}