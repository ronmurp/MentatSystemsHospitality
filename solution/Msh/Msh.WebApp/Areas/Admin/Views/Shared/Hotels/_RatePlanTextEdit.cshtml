@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Msh.Admin.Models.Const
@using Msh.WebApp.Areas.Admin.Models
@using Msh.WebApp.Models.Admin
@using Msh.WebApp.TagHelpers
@model Msh.HotelCache.Models.RatePlans.RatePlanText
@{
	var formParam= ViewBag.EditFormParam as EditFormParam;
	var isEdit = formParam.IsEdit;
	var formAction = formParam?.FormAction ?? "RatePlanTextAdd";
	var hotelCode = ViewBag.HotelCode;
	var title = ViewData["Title"];
}

<div class="text-center">
	<h1 class="display-6">@title</h1>
	<p></p>
</div>

@await Html.PartialAsync("Admin/_AdminSaveSuccess", formParam)

<div class="row">
	<div class="col-12">

		<form asp-action="@formAction" asp-route-hotelCode="@hotelCode">

			<div class="row">
				<div class="col-md-6 col-12">

					<div class="form-group mb-3">
						<label asp-for="Id" class="control-label"></label>&nbsp;
						<info-icon name="info-id" />
						<input asp-for="Id" class="form-control " />
						<span asp-validation-for="Id" class="text-danger"></span>
					</div>
				

					<div class="form-group mb-3">
						<label asp-for="Text" class="control-label"></label>&nbsp;
						<info-icon name="info-text" />
						<input asp-for="Text" class="form-control " />
						<span asp-validation-for="Text" class="text-danger"></span>
					</div>



					<div class="form-group mb-3">
						<label asp-for="Notes" class="control-label"></label>&nbsp;
						<info-icon name="info-notes"/>
						<input asp-for="Notes" class="form-control "/>
						<span asp-validation-for="Notes" class="text-danger"></span>
					</div>

				</div>
			</div>

			@await Html.PartialAsync("_SaveReturnButtons", new SaveReturnButtonsVm
			{
				ReturnUrl = $"{AdminRoutes.RatePlansTexts}/RatePlansTextList?hotelCode={@hotelCode}",
				ReturnText = ConstReturnText.ReturnToDash,
				ButtonType = SaveReturnTypes.Submit,
				SaveOperation = "submit"
			})

		</form>

	</div>
</div>