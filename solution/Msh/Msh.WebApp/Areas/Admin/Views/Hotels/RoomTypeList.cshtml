@using Msh.Admin.Models.Const
@using Msh.WebApp.Models.Admin.ViewModels
@model Msh.WebApp.Models.Admin.ViewModels.RoomTypeListVm;
@{
	var title = "Room Type List";
	ViewData["Title"] = title;
	ViewBag.InfoIcons = "Room Types";
}

@await Component.InvokeAsync("AdminMenu", new
{
	menuName = AdminConst.MenuHotels, currentItem = "RoomTypeList"
})

@await Html.PartialAsync("Hotels/_HiddenHotelInputs", @Model as HotelListVm)

<div class="text-center">
	<h1 class="display-6">@title</h1>
	<p>Hotel Room Types. Click for more information: <info-icon name="info-room-types" /> </p>
</div>

@await Component.InvokeAsync("AdminHotelSelect", @Model.HotelCode)

<div class="row">
	<div class="col-12">
		<table>
			<tr>
				<th>
					<div class="cell-outer">
						<div class="cell-inner">
							<p>Code</p>
						</div>
						<div class="cell-inner">
							<a href="javascript:window.mshMethods.sortList('@Model.HotelCode')">
								<i class="fa-solid fa-sort"></i>
							</a>
						</div>
					</div>
				</th>
				<th>Group Code</th>
				<th>Name</th>
				<th>   
					<div class="cell-outer">
						<div class="cell-inner">
							<a asp-controller="Hotels" asp-action="RoomTypeAdd" asp-route-hotelCode="@Model.HotelCode">
								<i class="fa-solid fa-plus"></i>
							</a>
						</div>
						<div class="cell-inner">
							<info-icon name="info-list-icons" />
						</div>
					</div>
				</th>
				<th>
					<div class="cell-outer">
						<div class="cell-inner">
							<input type="checkbox" name="bulk-check" id="blk" data-msh-code="0" />
						</div>
					</div>
				</th>
			</tr>
			
			@foreach (var rt in @Model.RoomTypes)
			{
				<tr>
					<td>@rt.Code</td>
					<td>@rt.GroupCode</td>
					<td>@rt.Name</td>
					<td style="width:80px;">
						<div class="cell-outer">
							<div class="cell-inner">
								<a asp-controller="Hotels" asp-action="RoomTypeEdit" asp-route-code="@rt.Code" asp-route-hotelCode="@Model.HotelCode">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
							</div>
							<div class="cell-inner">
								<a href="javascript:window.mshMethods.deleteItem('@rt.Code', '@Model.HotelCode')" >
									<i class="fa-solid fa-times"></i>
								</a>
							</div>
							<div class="cell-inner">
								<a href="javascript:window.mshMethods.copyItem('@rt.Code', '@Model.HotelCode')">
									<i class="fa-solid fa-copy"></i>
								</a>
							</div>
						</div>
					</td>
					<td style="width:30px;">
						<div class="cell-outer">
							<div class="cell-inner">
								<input type="checkbox" name="bulk-check" id="blk-@rt.Code" data-msh-code="@rt.Code" />
							</div>
						</div>
					</td>
				</tr>
			}
			
		</table>

	</div>
</div>

@await Html.PartialAsync("Hotels/_BulkCopyDelButtons", @Model.HotelCode)

@await Html.PartialAsync("Admin/_AdminErrorBlock", @Model.ErrorMessage)

<div id="page-info" style="display:none;">
	
	

	<div data-info-for="info-room-types">
		<span>Room Types</span>
		<div>
			@await Html.PartialAsync("Hotels/_ListIconsInfo")
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/js/mshapp/msh-ApiService.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/admin/hotels/msh-admin-roomtype.js"></script>
}



