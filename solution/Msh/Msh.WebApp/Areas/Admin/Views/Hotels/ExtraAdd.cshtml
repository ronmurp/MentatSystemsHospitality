@using Msh.WebApp.Models.Admin

@model Msh.HotelCache.Models.Extras.Extra;
@{
	

	var hotelCode = ViewBag.HotelCode;

	ViewBag.EditFormParam = new EditFormParam
	{
		ModelName = "Extra",
		ReturnUrl = "/admin/hotels/ExtrasList?hotelCode=" + hotelCode,
		ReturnText = "Extras List",
		KeyPropertyLabel = "Extra Code",
		KeyPropertyName = "Code",
		KeyPropertyValue = Model.Code,
		FormAction = "ExtraAdd"
	};

	ViewData["Title"] = "Add Extra";
}

@await Html.PartialAsync("Hotels/_ExtraEdit", @Model)

@section Scripts {
	<script src="~/js/mshapp/msh-apiservice.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/Admin/Hotels/msh-admin-extras.js"></script>
}