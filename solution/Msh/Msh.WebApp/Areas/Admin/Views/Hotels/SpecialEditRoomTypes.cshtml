@model Msh.WebApp.Models.Admin.ViewModels.SpecialRoomTypesVm
@{
	var title = "Special Room Types";
	ViewData["Title"] = title;
	var itemCode = ViewBag.Code as string;
	var hotelCode = ViewBag.HotelCode as string;
}

<input type="hidden" id="edit-type" value="item-options"/>
<input type="hidden" id="item-code" value="@itemCode" />
<input type="hidden" id="hotel-code" value="@hotelCode" />

<div class="text-center">
	<h1 class="display-6">@title for @itemCode in @hotelCode</h1>
	<p>For more information click <info-icon name="info-special-room-types" /></p>
</div>

<div class="alert alert-success alert-dismissible fade " role="alert" id="success-alert">
	<strong>Success!</strong> You have saved the list.<br/>
	<a href="/Admin/Hotels/SpecialsList">Return to Specials</a>
	<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>


<div class="row">
	<div class="col-12" id="table-target">
		@await Html.PartialAsync("Hotels/_SpecialEditRoomTypes", @Model)

	</div>
</div>

<div class="mt-3" style="display:flex;justify-content:start;">
	<div class="input-group">
		<button id="save-options" class="btn btn-outline-primary" onclick="window.mshMethods.saveSpecialRoomTypes()" class="mr-3">Save</button>
		<a asp-contoller="Hotels" asp-action="SpecialsList" asp-route-hotelCode="@hotelCode" asp-route-code="@itemCode" class="btn btn-outline-secondary">Return to list</a>
	</div>
		
</div>

<div id="page-info" style="display:none;">
	<div data-info-for="info-special-room-types">
		<span>Disabled Room Types</span>
		<div>
			<p>
				Select the room types for which this room type cannot be used.
			</p>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/mshapp/msh-ApiService.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/admin/hotels/msh-admin-specials-RoomTypes.js"></script>
	
}

