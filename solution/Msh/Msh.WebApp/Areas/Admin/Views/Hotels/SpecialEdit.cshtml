@using Msh.WebApp.Models.Admin

@model Msh.HotelCache.Models.Specials.Special
@{
	ViewData["Title"] = "Edit Special";

	var hotelCode = ViewBag.HotelCode;

	ViewBag.EditFormParam = new EditFormParam
	{
		ModelName = "Special",
		ReturnUrl = "/admin/hotels/SpecialsList?hotelCode=" + hotelCode,
		ReturnText = "Specials List",
		KeyPropertyLabel = "Special Code",
		KeyPropertyName = "Code",
		KeyPropertyValue = Model.Code,
		FormAction = "SpecialEdit"
	};
}

@await Html.PartialAsync("Hotels/_SpecialEdit", @Model)

@section InfoItems {

	@await Html.PartialAsync("Hotels/_SpecialEditInfo", "Special Edit")
}

@section Scripts {
	<script src="~/js/mshapp/msh-apiservice.js"></script>
	<script src="~/js/mshapp/mshapp.js"></script>
	<script src="~/js/admin/hotels/msh-admin-specials.js"></script>
}