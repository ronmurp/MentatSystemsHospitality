@model Msh.WebApp.Models.Admin.SuccessAlert
@{
	var isSuccess = ViewBag?.IsSuccess ?? false;
}

<input type="hidden" id="is-success" value="@isSuccess" />
@if (@isSuccess)
{
	
	<div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
		<strong>Success!</strong> You have saved the @Model.ModelName.<br/>
		<a href="@Model.ReturnUrl">@Model.ReturnText</a>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}
